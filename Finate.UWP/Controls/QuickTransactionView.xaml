    <!--  Action content  -->
    <xp:Shadow Margin="-35.2 0 -35.2 -45.2"
               CornerRadius="0"
               Z_Depth="5">
        <Border Background="White">
            <Grid Padding="28 12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Type selection  -->
                <Border Grid.Row="0"
                        Grid.Column="2"
                        Margin="0 12"
                        Background="{ThemeResource HeaderBackgroundBrush}">
                    <ToggleButton x:Name="ExpenseToggle"
                                  Background="{ThemeResource HeaderBackgroundBrush}"
                                  Checked="ExpenseToggleOnChecked"
                                  Content="EXPENSE"
                                  IsChecked="{Binding QuickTransaction.IsExpense,
                                                      Mode=TwoWay}"
                                  IsThreeState="False"
                                  Padding="12 8"
                                  Style="{StaticResource ToggleButtonStyleExpense}"
                                  Unchecked="ExpenseToggleOnChecked" />
                </Border>
                <Border Grid.Row="0"
                        Grid.Column="3"
                        Margin="0 12"
                        Background="{ThemeResource HeaderBackgroundBrush}">
                    <ToggleButton x:Name="IncomeToggle"
                                  Background="{ThemeResource HeaderBackgroundBrush}"
                                  Checked="IncomeToggleOnChecked"
                                  Content="INCOME"
                                  IsThreeState="False"
                                  Padding="12 8"
                                  Style="{StaticResource ToggleButtonStyleIncome}"
                                  Unchecked="IncomeToggleOnChecked" />
                </Border>

                <!--  Amount input  -->
                <Grid Grid.Row="1"
                      Grid.Column="1"
                      Grid.ColumnSpan="4"
                      Margin="0 8"
                      HorizontalAlignment="Stretch">
                    <TextBox Margin="0"
                             Background="Transparent"
                             BorderThickness="1"
                             FontSize="18"
                             Foreground="Black"
                             InputScope="Number"
                             PlaceholderText="Amount"
                             Text="{Binding QuickTransaction.Amount,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!--  Name input  -->
                <Grid Grid.Row="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="4"
                      Margin="0 8"
                      HorizontalAlignment="Stretch">
                    <TextBox Margin="0"
                             Background="Transparent"
                             BorderThickness="1"
                             FontSize="18"
                             Foreground="Black"
                             InputScope="Text"
                             PlaceholderText="Transaction description"
                             Text="{Binding QuickTransaction.Name,
                                            Mode=TwoWay,
                                            UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <!--  Category selection  -->
                <ComboBox Grid.Row="3"
                          Grid.Column="1"
                          Grid.ColumnSpan="4"
                          Margin="0 12"
                          HorizontalAlignment="Stretch"
                          Background="{ThemeResource HeaderBackgroundBrush}"
                          BorderThickness="1"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding QuickTransaction.Category,
                                                  Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="viewModels:CategoryViewModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Category icon  -->
                                <Ellipse Grid.Column="0"
                                         Margin="4"
                                         Fill="{Binding Color}"
                                         Style="{StaticResource CategoryEllipseOuter}" />
                                <Ellipse Grid.Column="0"
                                         Margin="4"
                                         Fill="{ThemeResource HeaderBackgroundBrush}"
                                         Style="{StaticResource CategoryEllipseInner}" />

                                <!--  Category name  -->
                                <TextBlock Grid.Column="1"
                                           Margin="8 0"
                                           VerticalAlignment="Center"
                                           FontSize="18"
                                           Text="{Binding Name}"
                                           TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Confirm button  -->
                <Button x:Name="ConfirmButton"
                        Grid.Row="4"
                        Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Margin="0 12"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource ExpenseButtonBackgroundBrush}"
                        Click="ConfirmButtonOnClick"
                        Content="CONFIRM"
                        Foreground="White"
                        Padding="32 8" />
            </Grid>
        </Border>
    </xp:Shadow>
</UserControl>
