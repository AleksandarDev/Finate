<Page x:Class="Finate.UWP.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Finate.UWP.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Background="{ThemeResource HeaderBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Margin="12 8"
                       Foreground="{ThemeResource HeaderForegroundBrush}"
                       Text="BALANCE" />

            <Border Grid.Row="1"
                    BorderBrush="{ThemeResource HeaderBorderBrush}"
                    BorderThickness="0 0 0 1" />

            <TextBlock Grid.Row="1"
                       Margin="24 0 24 12"
                       HorizontalAlignment="Center"
                       FontSize="32"
                       FontWeight="ExtraLight"
                       Foreground="{ThemeResource HeaderBalanceForegroundBrush}"
                       Text="15,744.00 kn" />
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{ThemeResource IncomeButtonBackgroundBrush}">
                    <Path Width="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                          Fill="White"
                          Stretch="Uniform" />
                </Border>
                <Border Grid.Column="1" Background="{ThemeResource ExpenseButtonBackgroundBrush}">
                    <Path Width="24"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Data="M19,13H5V11H19V13Z"
                          Fill="White"
                          Stretch="Uniform" />
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Page>
